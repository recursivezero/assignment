---
import "../assets/styles/header.css";
---

<div id="header-title">
  <p id="text">Map of India</p>
</div>

<style>
  #header-title {
    display: flex;
    align-items: center;
    margin: 0;
  }

  #header-title p {
    white-space: nowrap;
    margin: 0;
    color: #7a83f6;
    font-size: 1.2em;
  }

  @media screen and (max-width: 500px) {
    #header-title {
      width: 100%;
    }
    #header-title p {
      font-size: 1em;
    }
  }
</style>
